{
  "name": "mernn-crash-course",
  "version": "1.0.0",
  "description": "MERN stack product management application",
  "main": "backend/server.js",
  "scripts": {
    "dev": "set NODE_ENV=development&& nodemon backend/server.js",
    "start": "set NODE_ENV=production&& node backend/server.js",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend",
    "frontend": "npm run dev --prefix frontend",
    "backend": "nodemon backend/server.js",
    "install:all": "npm install && cd frontend && npm install"
  },
  "keywords": ["mern", "mongodb", "express", "react", "nodejs"],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "mongoose": "^9.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
}
